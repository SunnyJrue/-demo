
page{
    background:#F0EFED
}
.header{
    padding:10rpx 20rpx;
    background:#F8F8F8;
}
.header {
    display:flex;
    justify-content:space-between;
}
.movie-name{
    font-size:32rpx;
    font-weight:bold;
    margin-bottom:8rpx;

}
.show-time{
    font-size:24rpx;
    font-color:#636363
}
.order{
    margin-top:10rpx;
}
.movie-tips{
    background:#F8F8F8;
    margin-top:2rpx;
    brder-bottom:2rpx solid #DCDCDC;
    height:65rpx;
    position:relative;
}
.movie-tips .selected-ticket{
    background:#fff;
    display:inline-block;
    padding:6rpx 20rpx;
    font-size:22rpx;
    margin-left:8rpx;

}
.total-price{
    font-size:32rpx;
    color:#D54544;
    display:inline-block;
    position:absolute;
    top:10rpx;
    right:8rpx;
}
.movie-tips image{
    width:28rpx;
    height:28rpx;
    vertical-align:middle;

}
.movie-tips text{
    font-size:24rpx;
    vertical-align:middle;
}
.movie-tips  .show-tips{
    display:flex;
    justify-content:space-around;
    align-items:center;
    height:65rpx;
}

.show-tips>view{
    display:flex;
    justify-content:center;
    align-items:center;
}
.show-tips>view text{
    margin-left:4rpx;
}
.site-layout{
    margin-top:2rpx;
}

.screen{
    height:40rpx;
    width:325rpx;
 
    background-size:325rpx 40rpx;
    line-height:30rpx;
}
.screen-box{
    text-align:center;
    display:flex;
    justify-content:center;
    position:relative;
}

.screen-box text{
    position:absolute;
    font-size:24rpx;
    color:#fff;
}

.site-layout{
    position:relative;
    
}
.screen-word{
    text-align:center;
    font-size:24rpx;
}
.screen-word text{
    display:inline-block;
    background:#E0E0E0;
}
.site-detail {
    margin-left:60rpx;
    padding:16rpx 20rpx;
}
.site-detail image{
    width:28rpx;
    height:28rpx;
}

.site-rows{
    height:48rpx;
}

.site-row{
    display:inline-block;
    margin-right:8rpx;
    width:28rpx;
    height:28rpx;
}


.site-line{
    width:32rpx;
    top:0;
    padding-top:50rpx;
    padding-bottom:30rpx;
    font-size:20rpx;
    color:#fff;
    text-align:center;
    left:20rpx;
    position:absolute;
    background:#ACACAC;
    border-radius:20rpx;
}
.row-num{
    padding:11rpx 0;

}